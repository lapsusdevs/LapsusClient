                            <dd class="mt-1 text-1xl font-semibold text-gray-900">

                                <%= pterodactyl.relationships.servers.data[i].attributes.limits.cpu/100 %>

                            </dd>

                        </div>

                        <div class="px-4 py-5 bg-gray-50 rounded-lg overflow-hidden sm:p-6">

